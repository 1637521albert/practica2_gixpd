apiVersion: batch/v1
kind: Job
metadata:
  name: job-train
spec:
  template:
    spec:
      containers:
      - name: model-train
        image: model-train:default
        command: ["python", "main-train.py"]
        env:
        - name: MODEL_PATH
          value: /model/model.npy
        volumeMounts:
        - name: volume-tmp
          mountPath: /tmp
      volumes:
      - name: volume-tmp
        hostPath:
          path: /tmp
          type: Directory
      restartPolicy: Never
  backoffLimit: 4
